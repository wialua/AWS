    if value then
        spawn(function()
            while MedievalToggle.Value do
                local args = {
                    [1] = "Medieval"
                }
                game:GetService("ReplicatedStorage").Packages.Knit.Services.ChampionshipService.RF.RequestJoin:InvokeServer(unpack(args))
                
